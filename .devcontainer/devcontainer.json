{
  "name": "Lookout Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
"runArgs": ["--env-file", "${workspaceFolder}/.env"],
"customizations": {
  "vscode": {
    "settings": {
      "python.defaultInterpreterPath": "/usr/local/bin/python",
      "terminal.integrated.defaultProfile.linux": "bash"
    },
    "extensions": [
      "ms-python.python",
      "ms-azuretools.vscode-docker",
      "ms-vscode.azurecli"
    ]
  }
},
  "forwardPorts": [5000],
  "postCreateCommand": "pip install -r .devcontainer/requirements.txt",
  "remoteUser": "vscode",
  "workspaceFolder": "/workspaces/lookout-app"
}